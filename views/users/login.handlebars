<div class="container mt-3 col-4">
    <h1>Login</h1>
    <form method="POST" action="/users/login" onsubmit="submitButton.disabled = true; return true">
        <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" placeholder="Enter password">
        </div>
        <button type="submit" name="submitButton" id="submitButton" class="btn btn-primary">Log In</button>
    </form>
    <div class = "error font-italic">{{error}}</div>
</div>