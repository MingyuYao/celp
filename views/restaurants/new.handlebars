<form method="POST" action="/restaurants/new">
    <div class="form-group">
        <label for="">Name</label>
        <input type="text" id="restaurant-name-input" placeholder="Restaurant name">
    </div>
    <div class="form-group">
        <label for="">Address</label>
        <input type="text" id="restaurant-address-input" placeholder="Restaurant address">
    </div>
    <div class="form-group">
        <label for="">Cuisine Type</label>
        <input type="text" id="restaurant-cuisine-input" placeholder="Type of cuisine">
    </div>
    <button type="submit" class="btn btn-primary">Create New Restaurant</button>
</form>